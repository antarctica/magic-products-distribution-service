{
  "$id": "https://metadata-standards.data.bas.ac.uk/bas-magic-products-distribution-configuration-schemas/v1/iso-19115-2-resource-v1.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BAS MAGIC Products Distribution Service - ISO 19115-2 resource configuration schema v1",
  "description": "Configuration schema (version 1) using the ISO 19115-2 metadata standard for configuring resource permissions within the MAGIC Products Distribution Service",
  "definitions": {
    "constraint": {
      "title": "Constraint",
      "description": "Access/usage constraint describing a limitation on accessing or using the resource",
      "type": "object",
      "required": [
        "type",
        "restriction_code"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "title": "Constraint type",
          "description": "Whether the constraint constrains how the resource can be accessed, or be used.",
          "type": "string",
          "enum": [
            "access"
          ]
        },
        "restriction_code": {
          "title": "Restriction code",
          "description": "The domain the constraint pertains to.",
          "type": "string",
          "enum": [
            "restricted"
          ]
        },
        "statement": {
          "title": "Statement",
          "description": "Free-text description/definition of the constraint.",
          "type": "string"
        },
        "href": {
          "title": "URL",
          "description": "URL identifying, or relating to, the constraint.",
          "type": "string",
          "format": "uri"
        },
        "permissions": {
          "$ref": "#/definitions/permissions"
        }
      }
    },
    "constraints": {
      "title": "Constraints",
      "description": "Access/usage constraints for describing limitations on accessing or using the resource.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/constraint"
      },
      "minItems": 1
    },
    "distribution": {
      "title": "Distribution",
      "description": "Information about how to acquire, enquire about or retrieve the resource",
      "type": "array",
      "items": {
        "required": [
          "distributor",
          "distribution_options"
        ],
        "additionalProperties": false,
        "properties": {
          "distributor": {
            "$ref": "#/definitions/distributor"
          },
          "distribution_options": {
            "$ref": "#/definitions/distribution_options"
          }
        }
      },
      "minItems": 1
    },
    "distributor": {
      "title": "Distributor",
      "description": "A contact constrained to the the MAGIC team with a role of distributor.",
      "required": [
        "email",
        "phone",
        "address",
        "online_resource"
      ],
      "properties": {
        "organisation": {
          "properties": {
            "name": {
              "enum": ["Mapping and Geographic Information Centre, British Antarctic Survey"]
            }
          }
        },
        "email": {
          "enum": ["magic@bas.ac.uk"]
        },
        "phone": {
          "enum": ["+44 (0)1223 221400"]
        },
        "address": {
          "required": ["delivery_point", "city", "administrative_area", "postal_code", "country"],
          "properties": {
            "delivery_point": {
              "enum": ["British Antarctic Survey, High Cross, Madingley Road"]
            },
            "city": {
              "enum": ["Cambridge"]
            },
            "administrative_area": {
              "enum": ["Cambridgeshire"]
            },
            "postal_code": {
              "enum": ["CB3 0ET"]
            },
            "country": {
              "enum": ["United Kingdom"]
            }
          }
        },
        "online_resource": {
          "properties": {
            "href": {
              "enum": ["https://www.bas.ac.uk/team/magic"]
            },
            "title": {
              "enum": ["Mapping and Geographic Information Centre (MAGIC) - BAS public website"]
            },
            "description": {
              "enum": ["General information about the BAS Mapping and Geographic Information Centre (MAGIC) from the British Antarctic Survey (BAS) public website."]
            },
            "protocol": {
              "enum": ["WWW:LINK-1.0-http--link"]
            },
            "function": {
              "enum": ["information"]
            }
          }
        },
        "role": {
          "items": {
            "enum": [
              "distributor"
            ]
          }
        }
      }
    },
    "distribution_options": {
      "title": "Distribution Options",
      "description": "Set of formats and transfer options defining the forms the resource is distributed in.",
      "type": "array",
      "minItems": 1
    },
    "file_identifier": {
      "title": "File identifier",
      "description": "Identifier for the record describing the resource. This is almost always a UUID (v4).",
      "type": "string",
      "pattern": "^[\\da-f]{8}-[\\da-f]{4}-[\\da-f]{4}-[\\da-f]{4}-[\\da-f]{12}$",
      "minLength": 36,
      "maxLength": 36
    },
    "hierarchy_level": {
      "title": "Hierarchy level",
      "description": "The kind and scope of information the resource consists of and describes. Must be a product for this service.",
      "type": "string",
      "enum": [
        "product"
      ],
      "examples": [
        "product"
      ]
    },
    "identification": {
      "title": "Identification",
      "description": "Information about how to reference, categorise, or describe the resource.",
      "type": "object",
      "required": [
        "constraints"
      ],
      "additionalProperties": true,
      "properties": {
        "constraints": {
          "$ref": "#/definitions/constraints"
        }
      }
    },
    "permission": {
      "title": "permission",
      "description": "Conditions which must be met to access artefacts of the resource.",
      "type": "object",
      "required": ["scheme", "scheme_version", "directory_id"],
      "oneOf": [
        {"$ref": "#/definitions/_permissions_ms_graph_v1_alias"},
        {"$ref": "#/definitions/_permissions_ms_graph_v1_object_id"}
      ]
    },
    "_permissions_ms_graph_v1_alias": {
      "additionalProperties": false,
      "properties": {
        "scheme": {
          "$ref": "#/definitions/__permissions_ms_graph_v1_scheme"
        },
        "scheme_version": {
          "$ref": "#/definitions/__permissions_ms_graph_v1_scheme_version"
        },
        "directory_id": {
          "$ref": "#/definitions/__permissions_ms_graph_v1_directory_id"
        },
        "alias": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["~nerc"]
          },
          "minItems": 1
        }
      }
    },
    "_permissions_ms_graph_v1_object_id": {
      "additionalProperties": false,
      "properties": {
        "scheme": {
          "$ref": "#/definitions/__permissions_ms_graph_v1_scheme"
        },
        "scheme_version": {
          "$ref": "#/definitions/__permissions_ms_graph_v1_scheme_version"
        },
        "directory_id": {
          "$ref": "#/definitions/__permissions_ms_graph_v1_directory_id"
        },
        "object_id": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      }
    },
    "__permissions_ms_graph_v1_directory_id": {
      "title": "Directory ID",
      "description": "Azure Active Directory ID",
      "type": "string",
      "enum": ["b311db95-32ad-438f-a101-7ba061712a4e"]
    },
    "__permissions_ms_graph_v1_scheme": {
      "title": "Scheme",
      "description": "Permissions scheme, typically provider specific.",
      "type": "string",
      "enum": ["ms_graph"]
    },
    "__permissions_ms_graph_v1_scheme_version": {
      "title": "Scheme version",
      "description": "Permissions scheme version.",
      "type": "string",
      "enum": ["1"]
    },
    "permissions": {
      "title": "Permissions",
      "description": "A series of conditions that must all be met to access artefacts of the resource.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/permission"
      },
      "minItems": 1
    },
    "resource": {
      "title": "Resource",
      "description": "Description of the resource to be processed by this service, including its artefacts and the permissions that should apply to them.",
      "type": "object",
      "required": [
        "file_identifier",
        "hierarchy_level",
        "identification",
        "distribution"
      ],
      "additionalItems": true,
      "properties": {
        "file_identifier": {
          "$ref": "#/definitions/file_identifier"
        },
        "hierarchy_level": {
          "$ref": "#/definitions/hierarchy_level"
        },
        "identification": {
          "$ref": "#/definitions/identification"
        },
        "distribution": {
          "$ref": "#/definitions/distribution"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "https://metadata-standards.data.bas.ac.uk/bas-metadata-generator-configuration-schemas/v2/iso-19115-1-v2.json"
    },
    {
      "$ref": "#/definitions/resource"
    }
  ]
}
